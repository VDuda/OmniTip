# Blockchain (Required for contract interaction)
NEXT_PUBLIC_CONTRACT_ADDRESS=
NEXT_PUBLIC_CHAIN_ID=5611

# Admin wallet (Required - this wallet pays gas for all user tips AND deploys contracts)
# Fund with testnet BNB: https://www.bnbchain.org/en/testnet-faucet
PRIVATE_KEY=your_private_key_here

# Wallet generation salt (Optional - for deterministic user addresses)
WALLET_SALT=omnitip-salt-change-me

# WhatsApp Cloud API (Required for WhatsApp integration)
WHATSAPP_VERIFY_TOKEN=omnitip-verify-token
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id

# Audio Transcription (Optional - for voice message support)
# Choose one: OpenAI (best), Groq (fast/free), or AssemblyAI
OPENAI_API_KEY=sk-...
# GROQ_API_KEY=gsk-...
# ASSEMBLYAI_API_KEY=...
